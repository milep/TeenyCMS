<table>
  <tr>
    <th>Title</th>
    <th>Order</th>
    <th></th>
  </tr>
  <% @pages.each do |page| %>
  <tr>
    <td><a href="/page/<%= page.id %>/edit"><%= page.title %></a></td>
    <td><%= page.order %></td>
    <td>
      <a href="#" onclick="var f = document.createElement('form'); f.style.display = 'none'; this.parentNode.appendChild(f); f.method = 'POST'; f.action = '/page/<%= page.id %>/up'; var m = document.createElement('input'); m.setAttribute('type', 'hidden'); m.setAttribute('name', '_method'); m.setAttribute('value', 'put'); f.appendChild(m); f.submit(); return false;"><img alt="up" src="/images/arrow_up.png" /></a>
      <a href="#" onclick="var f = document.createElement('form'); f.style.display = 'none'; this.parentNode.appendChild(f); f.method = 'POST'; f.action = '/page/<%= page.id %>/down'; var m = document.createElement('input'); m.setAttribute('type', 'hidden'); m.setAttribute('name', '_method'); m.setAttribute('value', 'put'); f.appendChild(m); f.submit(); return false;"><img alt="down" src="/images/arrow_down.png" /></a>
      <a href="#" onclick="var f = document.createElement('form'); f.style.display = 'none'; this.parentNode.appendChild(f); f.method = 'POST'; f.action = '/page/<%= page.id %>'; var m = document.createElement('input'); m.setAttribute('type', 'hidden'); m.setAttribute('name', '_method'); m.setAttribute('value', 'delete'); f.appendChild(m); f.submit(); return false;"><img alt="delete" src="/images/cross.png" /></a>
    </td>
  </tr>
  <% end %>
</table>

